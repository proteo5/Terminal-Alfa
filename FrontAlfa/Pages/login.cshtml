@page
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>ERT - Log in</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="/bower_components/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="/bower_components/Ionicons/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="/dist/css/AdminLTE.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="/plugins/iCheck/square/blue.css">
    <!-- Pace style -->
    <link rel="stylesheet" href="../../plugins/pace/pace.min.css">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <b>ERT </b>Login
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">Proporcione sus credenciales para iniciar sesión</p>
            <div id="app">
                <div class="form-group has-feedback"
                     v-bind:class="{'has-error': UserHasError }">
                    <input v-model="User"
                           v-on:keyup.enter="userFocusPass"
                           v-on:blur="userLostFocus"
                           type="text"
                           id="user"
                           name="user"
                           class="form-control"
                           placeholder="Usuario"
                           maxlength="200">
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                    <span class="help-block" v-if="UserHasError">El Usuario es requerido.</span>
                </div>
                <div class="form-group has-feedback"
                     v-bind:class="{'has-error': PassHasError }">
                    <input v-model="Pass"
                           v-on:keyup.enter="passFocusPass"
                           v-on:blur="passLostFocus"
                           type="password"
                           id="password"
                           name="password"
                           class="form-control"
                           placeholder="Contraseña"
                           maxlength="100">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    <span class="help-block" v-if="PassHasError">La Contraseña es requerida.</span>
                </div>
                <div class="row">
                    <!-- /.col -->
                    <div class="col-xs-4 col-xs-offset-8">
                        <button v-on:click="login()"
                                type="submit"
                                class="btn btn-primary btn-block btn-flat">
                            Login
                        </button>
                    </div>
                    <!-- /.col -->
                </div>
            </div>
            <a href="#">Olvidé mi contraseña</a><br>
        </div>
        <!-- /.login-box-body -->
    </div>
    <!-- /.login-box -->
    <!-- jQuery 3 -->
    <script src="/bower_components/jquery/dist/jquery.min.js"></script>
    <!-- Vue JS -->
    <script src="//cdnjs.cloudflare.com/ajax/libs/vue/2.5.13/vue.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- lscache https://github.com/pamelafox/lscache -->
    <script src="//cdnjs.cloudflare.com/ajax/libs/lscache/1.1.0/lscache.min.js"></script>
    <!-- iCheck -->
    <script src="/plugins/iCheck/icheck.min.js"></script>
    <!-- PACE -->
    <script src="/bower_components/PACE/pace.min.js"></script>
    <!-- Notify -->
    <script src="/plugins/Notify/notify.min.js"></script>
    <!-- Sweetalert -->
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' /* optional */
            });
        });
    </script>
    <script src="/js/global.js"></script>
    <script src="/js/login.js"></script>
</body>
</html>
